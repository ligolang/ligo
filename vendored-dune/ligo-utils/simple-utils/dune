;; Building the simple utilities for LIGO as a library

(library
 (name simple_utils)
 (public_name simple-utils)
 (libraries
  ;; Third party
  core
  core_unix.sys_unix
  lwt
  yojson
  result
  unix
  zarith
  str
  uri)
 (preprocess
  (pps
   ppx_jane
   ppx_deriving.eq
   ppx_deriving.iter
   ppx_deriving.map
   ppx_deriving.fold
   ppx_deriving_yojson
   lwt_ppx))
 (flags
  (:standard -open Core)))
