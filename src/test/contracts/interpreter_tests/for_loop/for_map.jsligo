const select = (source: map<int, string>, idx: int): option<[int, string]> => {
  let index = 0;
  let result : option<[int, string]> = None();
  for (const item of source) {
    if (index == idx)
      result = Some(item);
    index++
  }
  return result;
}

const test = select(Map.literal(list([[1, "hello"], [2, "goodbye"], [3, "chau"]])), 1);