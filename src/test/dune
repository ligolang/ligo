 (alias manual-test)
 (action
  (run ./manual_test.exe))
 (deps
  (glob_files contracts/*)))

(rule
 (alias decompiler_tests)
 (action
  (run ./decompiler_tests.exe))
 (deps
  (glob_files contracts/*)))

(rule
 (alias pretty-printer-tests)
 (action
  (run ./pretty_printer_tests.exe))
 (deps
  (source_tree contracts)))

